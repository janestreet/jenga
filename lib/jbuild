(library
 ((name jenga_lib)
  (public_name jenga)
  (libraries (async
              async_inotify
              command_rpc
              core
              fieldslib
              ocaml_plugin
              re
              sexplib
              str
              tenacious_lib))
  (c_names (digest_stubs batched_mtimes_stubs))
  (inline_tests ((deps (fs.ml))))))

;; Embed the API into the library as a string
(rule
 ((targets (cat_api.ml))
  (deps (api.mli))
  (action "{ echo -n 'let string = {cat_api|'; cat api.mli; echo -n '|cat_api}'; } > ${@}")))

(jbuild_version jane_street)
